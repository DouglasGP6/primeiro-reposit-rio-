programa
{
	inteiro numero1, numero2, soma


	funcao inicio() {

		escreva("Informe o numero 1:")
		leia (numero1)
		escreva("Informe o numero 2:")
		leia(numero2)
		soma = numero1 + numero2
		escreva(soma)
	}
}

